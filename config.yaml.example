# config.yaml.example
# modify and rename it to config.yaml

settings:
  qbit_host: "http://qbittorrent:8080"
  qbit_user: "admin"
  qbit_pass: "adminadmin"
  check_interval: 3600       # Run every 1 hour
  dry_run: true              # Set to false to actually delete
  delete_files: true         # Delete files on disk

# Define rules per category.
# - min_seed_time: Seconds (86400 = 1 day)
# - min_ratio: -1 to disable
# - min_volume_bytes: -1 to disable (10737418240 = 10GB)
# Logic: Torrent must exceed Time AND (Ratio OR Volume)

rules:
  # Rule Set 1: Movies (Long retention)
  radarr:
    min_seed_time: 604800    # 7 days
    min_ratio: 2.0
    min_volume_bytes: -1

  # Rule Set 2: TV Shows (Quick rotation)
  sonarr:
    min_seed_time: 172800    # 48 hours
    min_ratio: 1.0
    min_volume_bytes: -1

  # Rule Set 3: Music (Ratio focused)
  lidarr:
    min_seed_time: 0         # No minimum time
    min_ratio: 5.0           # Strict ratio
    min_volume_bytes: -1

  # Default rule for any category not listed above
  # Remove this block if you only want to clean specific categories
  default:
    min_seed_time: 1209600   # 14 days
    min_ratio: 1.5
    min_volume_bytes: 21474836480 # 20GB
